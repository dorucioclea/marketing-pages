{% from '../components/preview-section-table-row.njk' import previewSectionTableRow %}
{% from '../components/preview-question-data-bulletlist.njk' import previewQuestionDataBulletlist %}
{% from '../components/preview-question-data-text.njk' import previewQuestionDataText %}

{% macro previewBrowserBased(section) %}
  <dl data-test-id="preview-section-table-browser-based" class="nhsuk-summary-list">
    {{ previewSectionTableRow(
      'supported-browsers', 
      'Browsers Supported', 
      previewQuestionDataBulletlist(section.sections['browsers-supported'].answers['supported-browsers'])) }}
    {{ previewSectionTableRow(
      'mobile-responsive', 
      'Mobile responsive', 
      previewQuestionDataText(section.sections['browsers-supported'].answers['mobile-responsive'])) }}
    {{ previewSectionTableRow(
      'plugins-required', 
      'Plug-ins or extensions required', 
      previewQuestionDataText(section.sections['plug-ins-or-extensions'].answers['plugins-required'])) }}
    {{ previewSectionTableRow(
      'plugins-detail', 
      'Plug-ins or extensions information', 
      previewQuestionDataText(section.sections['plug-ins-or-extensions'].answers['plugins-detail'])) }}
  <dl>
{% endmacro %}
